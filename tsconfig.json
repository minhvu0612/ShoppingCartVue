{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [ "node" ],
    "importsNotUsedAsValues": "remove",
    "moduleResolution": "node",
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
